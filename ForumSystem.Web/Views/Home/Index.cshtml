@model IEnumerable<ForumSystem.Web.ViewModels.Home.IndexPostViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    @foreach (var post in Model)
    {
        <div class="row">
            <div class="col-md-1">
                <div class="well text-center">
                    <div class="row">
                        @post.AnswersCount
                    </div>
                    <div class="row">
                        answers
                    </div>
                </div>
            </div>
            <div class="col-md-1">
                <div class="well text-center">
                    <div class="row">
                        @post.VotesCount 
                    </div>
                    <div class="row">
                        votes
                    </div>
                </div>
            </div>
            <div class="col-md-10">
                <div class="row">
                    <a href="~/questions/@post.Id/@post.Title">@post.Title</a>
                </div>
                <div class="row">
                    <p>Test...Test...Test...Test...</p>
                </div>
                <div class="row">
                    <span class="badge">test</span>
                    <span class="badge">test</span>
                    <span class="badge">test</span>
                    <span class="badge">test</span>
                    <div class="text-right">
                        Asked <time datetime="@post.CreatedOn.ToUniversalTime().ToString("o")" class="timeago">@post.CreatedOn</time>
                    </div>
                </div>
            </div>
        </div>
        <hr />
    }
</div>

@section scripts
{
    <script src="~/Scripts/jquery.timeago.js"></script>
    <script>
        jQuery(document).ready(function () {
            jQuery("time.timeago").timeago();
        });
    </script>
}