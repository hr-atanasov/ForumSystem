@model ForumSystem.Web.ViewModels.Questions.AnswerViewModel
<div class="row">
    @Html.Raw(Model.Content)
</div>
<div class="row">
    <div class="text-right">
        Answered by <em>@Model.UserName</em>
    </div>
    <div class="text-right">
        <time datetime="@Model.CreatedOn.ToUniversalTime().ToString("o")" class="timeago"><strong>@Model.CreatedOn</strong></time>
    </div>
</div>
<div class="row small">
    @if (Model.Comments != null)
    {
        <div>
            @foreach (var comment in Model.Comments)
            {
                Html.RenderPartial("_DisplayCommentsPartial", comment);
            }
        </div>
    }
</div>
